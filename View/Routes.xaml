<UserControl x:Class="TravelManager.View.Routes"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TravelManager.View"
             mc:Ignorable="d" 
             d:DesignHeight="600" Width="806.051">
    <DockPanel Background="WhiteSmoke">

        <Grid Height="54"  DockPanel.Dock="Top">

            <StackPanel Orientation="Horizontal" VerticalAlignment="Top" Margin="20,0,10,0">
            </StackPanel>
        </Grid>
        <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
            <Grid x:Name="Main" Background="Lavender" DockPanel.Dock="Right" Margin="0,0,0,0" >
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="0.05*"/>
                <ColumnDefinition Width="0.5*"/>
                <ColumnDefinition Width="0.5*"/>
                <ColumnDefinition Width="0.05*"/>
            </Grid.ColumnDefinitions>


                <local:RouteControl Height="200" Width="350" DataContext="{Binding Route}" Grid.Column="1">
                    
                </local:RouteControl>
            </Grid>
          </ScrollViewer>
    </DockPanel>
</UserControl>